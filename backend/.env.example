# ================================================
# OFTA Backend Environment Variables
# ================================================

# ────────────────────────────────────────────────
# Database Configuration
# ────────────────────────────────────────────────
OFTA_DB_HOST=localhost
OFTA_DB_PORT=5432
OFTA_DB_NAME=ofta_db
OFTA_DB_USERNAME=postgres
OFTA_DB_PASSWORD=your_password_here

# ────────────────────────────────────────────────
# Firebase Configuration
# ────────────────────────────────────────────────
FIREBASE_PROJECT_ID=ofta-firebase
GOOGLE_CLOUD_PROJECT=ofta-project

# ────────────────────────────────────────────────
# Google Cloud Storage
# ────────────────────────────────────────────────
OFTA_STORAGE_BUCKET=gs://ofta_bucket_us_central1

# ────────────────────────────────────────────────
# API Security
# ────────────────────────────────────────────────
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
DOCS_USER=admin
DOCS_PASS=change-this-password

# ────────────────────────────────────────────────
# Feature Flags
# ────────────────────────────────────────────────
ENABLE_REVERSE_MODE=true
ENABLE_LEADERBOARD=true
ENABLE_DAILY_CHALLENGE=true

# ────────────────────────────────────────────────
# App Configuration
# ────────────────────────────────────────────────
PORT=8080
ENVIRONMENT=development
